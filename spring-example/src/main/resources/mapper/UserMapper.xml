<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
		PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zhangam.example.transaction.mapper.UserMapper">

	<resultMap id="resultMap" type="org.zhangam.example.transaction.pojo.User">
		<id column="id" property="id" jdbcType="INTEGER"/>
		<result column="name" property="name" jdbcType="VARCHAR"/>
		<result column="age" property="age" jdbcType="INTEGER"/>
	</resultMap>

	<insert id="insert" parameterType="org.zhangam.example.transaction.pojo.User">
		insert into `user`(`name`,`age`) values (#{name,jdbcType=VARCHAR},#{age,jdbcType=INTEGER})
	</insert>

	<select id="selectAll" resultMap="resultMap">
		select * from `user`
	</select>

	<select id="selectById" parameterType="java.lang.Integer" resultMap="resultMap">
		select * from `user` where id = #{id}
	</select>
</mapper>